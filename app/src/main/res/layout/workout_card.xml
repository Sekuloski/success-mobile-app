<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnWorkout"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@drawable/layout_bg"
    android:padding="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <TextView
        android:id="@+id/workoutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Workout Name">

    </TextView>

    <TextView
        android:id="@+id/exercise1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/exercise2"
        app:layout_constraintTop_toBottomOf="@id/workoutName"
        tools:text="Exercise 1" />

    <TextView
        android:id="@+id/exercise4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:textSize="25sp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/exercise3"
        tools:text="Exercise 4" />

    <TextView
        android:id="@+id/exercise3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/exercise4"
        app:layout_constraintTop_toBottomOf="@id/exercise2"
        tools:text="Exercise 3" />

    <TextView
        android:id="@+id/exercise2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/md_theme_dark_onTertiaryContainer"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/exercise3"
        app:layout_constraintTop_toBottomOf="@id/exercise1"
        tools:text="Exercise 2" />


</androidx.constraintlayout.widget.ConstraintLayout>